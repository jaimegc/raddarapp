                    tools:visibility="visible">

                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:elevation="2dp">

                        <com.pkmmte.view.CircularImageView
                            android:id="@+id/comment_user_image2"

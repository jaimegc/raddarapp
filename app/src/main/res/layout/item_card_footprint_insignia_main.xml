<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="335dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/card_root">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="260dp"
        android:layout_height="324dp"
        android:background="@drawable/background_card_insignia_stroke"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/background_card"
            android:layout_width="252dp"
            android:layout_height="316dp"
            android:layout_below="@id/user_top"
            android:background="@drawable/background_card_conventional_insignia"
            android:layout_centerInParent="true"
            android:elevation="1dp"
            android:gravity="end" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:background="@drawable/background_card_insignia" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/background_image"
            android:layout_width="252dp"
            android:layout_height="265dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/timeago_distance"
            android:elevation="1dp"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/ic_insignia_check_placeholder"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/flag_ball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/flag_ball_background"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle_coin_insignia" />

        <ImageView
            android:id="@+id/ic_footprint_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/flag_ball_background"
            android:layout_alignTop="@+id/flag_ball_background"
            android:padding="4dp"
            android:src="@drawable/ic_footprint_location"
            android:tint="@color/footprint_insignia_location" />
    </RelativeLayout>

    <TextView
        android:id="@+id/scope"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:textColor="@color/blue_dark_raddar"
        android:textSize="@dimen/textsize_small2"
        tools:text="+150,45"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ic_vote_hearts" />
    <ImageView
        android:id="@+id/ic_vote_hearts"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:elevation="1dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_coin_blue"
        android:layout_marginStart="1dp"
        android:layout_alignParentBottom="true" />
    <View
        android:layout_width="228dp"
        android:layout_height="20dp"
        android:layout_marginTop="268dp"
        android:elevation="1dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_card_insignia_title"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="20dp"
        tools:text="Yo soy el petado del mundo"
        android:layout_marginTop="268dp"
        android:elevation="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/textsize_medium" />

    <ImageView
        android:id="@+id/ic_insignia"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="7dp"
        android:gravity="center"
        android:src="@drawable/ic_insignia_check"
        android:textSize="@dimen/textsize_huge1" />

    <TextView
        android:id="@+id/insignia_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_toEndOf="@+id/ic_insignia"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:text="@string/insignia_hashtag"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="2dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_mini_2" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="470dp"
        android:background="@drawable/background_card_white"
        android:id="@+id/card_root">

        <LinearLayout
            android:id="@+id/linear_select_social_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <TextView
                android:id="@+id/select_social_network"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="@dimen/textsize_very_big1"
                android:textColor="@color/grey2"
                android:text="@string/social_network_coming_soon"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/decor_grey_light"
            android:layout_below="@+id/linear_select_social_network"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_select_social_network"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_instagram"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logo_instagram"/>

                        <TextView
                            android:id="@+id/name_instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/social_network_instagram"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_big2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/decor_grey_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_facebook"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logo_facebook"/>

                        <TextView
                            android:id="@+id/name_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/social_network_facebook"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_big2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/decor_grey_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_youtube"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logo_youtube"/>

                        <TextView
                            android:id="@+id/name_youtube"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/social_network_youtube"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_big2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/decor_grey_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_snapchat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_snapchat"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logo_snapchat"/>

                        <TextView
                            android:id="@+id/name_snapchat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/social_network_snapchat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_big2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/decor_grey_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_pinterest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_google_plus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logo_pinterest"/>

                        <TextView
                            android:id="@+id/name_google_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/social_network_pinterest"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_big2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/decor_grey_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_google_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_pinterest"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logo_google_plus"/>

                        <TextView
                            android:id="@+id/name_pinterest"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/social_network_google_plus"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_big2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/decor_grey_light" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/message_close"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/background_button_dialog_ok"
            android:textColor="@color/dialog_ok"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/textsize_big1"
            android:text="@string/dialog_close"/>

        <ImageView
            android:id="@+id/main_terrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/main_terrain"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="20dp" />
            <solid android:color="@color/like_old" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Overlay with same color as background-->
    <item
        android:top="-10dp"
        android:bottom="0dp"
        android:left="10dp"
        android:right="-20dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/dislike" />
                <size android:width="20dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:top="0dp"
        android:left="60dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/dislike" />
                <size
                    android:width="45dp"
                    android:height="20dp" />
                <corners android:radius="20dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
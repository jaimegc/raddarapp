<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_map_raddar_no_alpha</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/background_map_raddar_no_alpha</item>
        <item name="android:textViewStyle">@style/AppBaseTheme.Widget.TextView</item>
    </style>

    <style name="ActivityBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ActivityBackgroundBlue" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/blue_dark_raddar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ActivityTransparent" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/semi_transparent_black_very_dark</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBaseTheme.Widget"/>

    <style name="AppBaseTheme.Widget.TextView" parent="android:Widget.TextView">
        <item name="fontPath">fonts/CircularStd-Bold.ttf</item>
    </style>

    <style name="RevealDialogWeapons" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/semi_transparent_black_light</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/semi_transparent_black_light</item>
    </style>

    <style name="MenuDialogComingSoon" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RadioButtonCreateFootprint" parent="AppTheme">
        <item name="colorControlNormal">#FF0000</item>
        <item name="colorAccent">#00FF00</item>
        <item name="android:textColorSecondary">#0000FF</item>
    </style>

    <style name="SwitchSettings" parent="Base.TextAppearance.AppCompat.Widget.Switch">
        <item name="thumbTint">@color/marker_me</item>
        <item name="trackTint">@color/marker_me</item>
    </style>

    <style name="CheckBoxWelcome" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/marker_me</item>
    </style>

    <style name="CheckBoxTermsConditions" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/marker_me</item>
    </style>

    <style name="CheckBoxActivateDesactivateUser" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey2</item>
        <item name="colorControlActivated">@color/blue_dark_raddar</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/marker_me</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF0000</item>

    </style>

    <style name="switchStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/switch_settings_on</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_settings_off</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/switch_settings_off</item>
    </style>

</resources>
